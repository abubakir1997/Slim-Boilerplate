{# Remove {% if url == 'dashboard' %}{% endif %} #}
{% macro item(url, icon) %}
<li>
	<a href="{% if url == 'dashboard' %}{{ path_for(url) }}{% endif %}" 
	   class="file-{{ url }}{% if url == 'dashboard' %}{% if path_is(url) %} active{% endif %}{% endif %}">
		<div class="ui inverted mini statistic">
			<div class="value">
				<i class="{{ icon }} large icon"></i>
			</div>
			<div class="label">{{ url }}</div>
		</div>
	</a>
</li>
{% endmacro %}